            VerticalAlignment="Top"
            HorizontalAlignment="Left"
            Height="65"
            Width="65"
            Margin="400,330,0,0"
            Background="LightGray" FontSize="20" FontFamily="Times New Roman" Content="="/>
        <Button
            VerticalAlignment="Top"
            HorizontalAlignment="Left"
            Height="65"
            Width="65"
            Margin="475,120,0,0"
            Background="LightGray" FontSize="20" FontFamily="Times New Roman" Content="+"/>
        <Button
            VerticalAlignment="Top"
            HorizontalAlignment="Left"
            Height="65"
            Width="65"
            Margin="475,190,0,0"
            Background="LightGray" FontSize="20" FontFamily="Times New Roman" Content="-"/>
        <Button
            VerticalAlignment="Top"
            HorizontalAlignment="Left"
            Height="65"
            Width="65"
            Margin="475,260,0,0"
            Background="LightGray" FontSize="20" FontFamily="Times New Roman" Content="*"/>
        <Button
            VerticalAlignment="Top"
            HorizontalAlignment="Left"
            Height="65"
            Width="65"
            Margin="475,330,0,0"
            Background="LightGray" FontSize="20" FontFamily="Times New Roman" Content="/"/>
